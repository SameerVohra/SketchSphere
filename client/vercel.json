{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.js)",  
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*\\.css)",  
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*\\.html)",  
      "dest": "/dist/$1"
    },
    {
      "src": "/(static/.*|favicon.ico)",  
      "dest": "/dist/$1"
    },
    // Catch-all route for all other requests
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
